generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL") // ignore this error 
}

type user{
    name String
    email String
    id String
}

type asg{
    question String 
    answer String?
}

type task{
    taskNumber Int
    taskTitle String
    taskDescription String
    estimatedTime String
    assignments asg[]
}

model Repo {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    user        user
    tasks       task[]
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}